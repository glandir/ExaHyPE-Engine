  void deltaDistribution(
    {{solverName}}& solver,
    const double t,
    const double dt,
    const tarch::la::Vector<DIMENSIONS, double>& center,
    const tarch::la::Vector<DIMENSIONS, double>& dx,
    double** pointForceSources //memory space for forceVector
  );
{% endif %}
  
