#include "{{pathToOptKernel}}/Kernels.h"
#include "{{pathToOptKernel}}/Quadrature.h"

#include "{{solverHeader}}"

void {{codeNamespace}}::adjustPointSolution(
  {{solverName}}& solver,
  double* luh,
  const tarch::la::Vector<DIMENSIONS,double>& center,
  const tarch::la::Vector<DIMENSIONS,double>& dx,
  const double t,
  const double dt
) {
  double x[{{nDim}}];
  int pos = 0;

{% if nDim == 2 %} 
  for(int j=0;j<{{nDof}};j++) {
    x[1] = center[1] + dx[1] * (nodes[j] - 0.5);
    for(int i=0;i<{{nDof}};i++) {
      x[0] = center[0] + dx[0] * (nodes[i] - 0.5);

      solver.{{solverName}}::adjustPointSolution(x, t, dt, &luh[pos*{{nData}}]);
      pos++;
    }
  }
{% endif %}
{% if nDim == 3 %} 
  for(int k=0;k<{{nDof}};k++) {
    x[2] = center[2] + dx[2] * (nodes[k] - 0.5);
    for(int j=0;j<{{nDof}};j++) {
      x[1] = center[1] + dx[1] * (nodes[j] - 0.5);
      for(int i=0;i<{{nDof}};i++) {
        x[0] = center[0] + dx[0] * (nodes[i] - 0.5);

        solver.{{solverName}}::adjustPointSolution(x, t, dt, &luh[pos*{{nData}}]);
        pos++;
      }
    }
  }
{% endif %}
}

