exahype-project Test

  peano-kernel-path const = ./Peano
  exahype-path const      = ./ExaHyPE
  output-directory const           = ./Toolkit/examples/output/test-constants-aderdg
  architecture const               = noarch
  log-file                         = whatever.log

  computational-domain
    dimension const                = 2
    width                          = 1.0, 1.0
    offset                         = 0.0, 0.0
    end-time                       = 2000.0
  end computational-domain

  global-optimisation
    fuse-algorithmic-steps          = on
    fuse-algorithmic-steps-factor   = 0.99
    timestep-batch-factor           = 0.0
    skip-reduction-in-batched-time-steps = on
    disable-amr-if-grid-has-been-stationary-in-previous-iteration = off
    double-compression = 0.0
    spawn-double-compression-as-background-thread = on
  end global-optimisation

  solver ADER-DG TestSolver_ADERDG
    variables const                = foo:1,bar:2,baz:3
    order const                    = 3
    maximum-mesh-size              = 0.333339
    maximum-mesh-depth             = 0
    time-stepping                  = global
    type const = nonlinear
    terms const = flux,ncp,source
    optimisation const = generic
    language const                 = C
    constants                      = dummy:dummy,bar:baz

    plot vtk::Legendre::vertices::ascii ConservedWriter
      variables const = 23
      time      = 0.0
      repeat    = 0.000666667
      output    = ./vtk-output/conserved
    end plot

  end solver


end exahype-project
