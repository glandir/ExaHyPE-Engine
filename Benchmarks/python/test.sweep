; Options file
; Comments like this and white spaces are ignored.
; This file can be parsed by: https://docs.python.org/3/library/configparser.html
;
; If you specify multiple comma separated values, we will loop over it
; Multiple values will not be possible for:
; cpus,runs,template,mail,dimension,distributedmem
[machine]
cpus    = 24
fabrics = tmi

[jobs]
time     = 00:10:00
nodes    = 1,2,3,4,5
tasks    = 2,4,8
; "cores = auto" means that "cores = machine->cpus / tasks"
cores    = auto
runs     = 3; number of runs per configuration
template = my.slurm-script-template
mail     = dominic.e.charrier@durham.ac.uk

[environment]
; if we want to modify the environment, we define all variables here
; Otherwise, we assume the user has already loaded all required modules
SHAREDMEM          = TBB,OMP

[build]
dimension          = 3
order              = 3,5,7

[workspace]
exahype-root-dir  = ../../
project           = ../../ApplicationExamples/Euler/Euler_ADERDG
output-prefix     = Euler_ADERDG
output-directory  = ../tests/hamilton7/Euler_ADERDG/mpi-scaling
template          = ../templates/Euler_ADERDG/Euler_ADERDG.exahype-template

[parameters]
; The following parameters are simply piped into the spec file
; If a place-holder exists from them, it is replaced by the right-hand side.
; If you specify multiple values comma separated, we will loop over it
;
; We probably need to generate a hash value for decoding the individual options
; and parameters. Otherwise, we will run into the file name size limit  of linux which is 
; 255 bytes.
; We further need to write the chosen options and parameters
; into the header of our output file. This will enable
; the data analysis scripts (table generators) to deduce columns
; of the generated table.
time_steps                                                    = 4
fuse-algorithmic-steps                                        = on,off
fuse-algorithmic-steps-factor                                 = 0.99
spawn-predictor-as-background-thread                          = on
timestep-batch-factor                                         = 0.8
skip-reduction-in-batched-time-steps                          = on
disable-amr-if-grid-has-been-stationary-in-previous-iteration = off
double-compression                                            = 0.0
spawn-double-compression-as-background-thread                 = off
; good values: 0.0404, 0.0128, 0.0042, 0.0014
maximum-mesh-size                                             = 0.0404
maximum-mesh-depth                                            = 0
