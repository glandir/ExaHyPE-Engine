/**

 GRMHD, ie. MHD on static curved background spacetime,
 with Limiting ADER-DG Solver.

 */
exahype-project GRMHD

  peano-kernel-path const          = ./Peano
  exahype-path const               = ./ExaHyPE
  output-directory const           = ./ApplicationExamples/GRMHD/GRMHD_f90
  architecture const               = noarch
  log-file                         = whatever.log

  computational-domain
    dimension const                = 3
    width                          = 2.0, 2.0, 2.0
    offset                         = 0.0, 0.0, 0.0
    end-time                       = 2.1
  end computational-domain
  
  shared-memory
    identifier               = dummy
    configure                = {}
    cores                    = 4
    properties-file          = sharedmemory.properties
  end shared-memory  
  
  distributed-memory
    identifier               = static_load_balancing
    configure                = {hotspot,fair,ranks_per_node:1}
    buffer-size              = 64
    timeout                  = 60
  end distributed-memory

  global-optimisation
    fuse-algorithmic-steps          = off
    fuse-algorithmic-steps-factor   = 0.99
    timestep-batch-factor           = 0.0
    skip-reduction-in-batched-time-steps = on
    disable-amr-if-grid-has-been-stationary-in-previous-iteration = off
    double-compression = 0.0
    spawn-double-compression-as-background-thread = off
  end global-optimisation

  solver ADER-DG GRMHDSolver
    /* gamma is actually parts of a matrix... */
    variables const                = rho:1,vel:3,E:1,B:3,psi:1,lapse:1,shift:3,gij:6
    order const                    = 3
    maximum-mesh-size              = 0.3 
    time-stepping                  = global
    type const = nonlinear
	terms const = flux,ncp
	optimisation const = generic
    language const                 = Fortran

    plot vtk::Legendre::vertices::ascii ConservedWriter
      variables const = 19
      time      = 0.0
      repeat    = 0.00111111
      output    = ./vtk-output/conserved
      select    = x:0.0,y:0.0
    end plot

    plot vtk::Legendre::vertices::ascii IntegralsWriter
      variables const = 0
      time = 0.0
      repeat = 0.00111111
      output = ./global-integrals
      select    = x:0.0,y:0.0
    end plot
  end solver


end exahype-project
