Packed-Type: short int;

class exahype::dastgen::State {  
  /**
   * The minimum time step size of all solves for the previous sweep.
   */
  parallelise persistent double previousMinTimeStepSize;

  /**
   * The minimum time step size of all solves for the current sweep.
   */
  parallelise persistent double currentMinTimeStepSize;
  
  /**
   * Estimate of the minimum time step size of all solves
   * for the next sweep.
   */
  parallelise persistent double nextMinTimeStepSize;
  
  /**
   * Minimum of the time stamps of all solves. 
   */
  parallelise persistent double currentMinTimeStamp;
  
  #ifdef Parallel
  enum GridConstructionState {
    Default, Veto, Aggressive
  };
  
  parallelise persistent GridConstructionState  gridConstructionState; 
  #endif
};
