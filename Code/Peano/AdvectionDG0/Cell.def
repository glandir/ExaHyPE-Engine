#include "AdvectionDG0/Constants.h"

Packed-Type: int;

Constant: NUMBER_OF_PDES;  // The number of PDEs we want to run on the same grid.

class exahype::dastgen::Cell {  
  parallelise persistent int  cellDescriptionIndex[NUMBER_OF_PDES];    // We specify a cellDescription for each PDE that should run on the grid.
  parallelise persistent bool riemannSolveNotDone; // Flag indicating if the Riemann solve was performed for this cell, i.e., on all bounding faces of the cell.
};
