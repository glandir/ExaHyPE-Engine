#include "peano/utils/Globals.h"

Packed-Type: int;

Constant: DIMENSIONS;

class exahype::records::PatchDescription {
  // ! space-time data, size: #var*(N+1)^(d+1)
  parallelise persistent int spaceTimePredictorDof;   // The indices of the space-time predictor DoF belonging to this cell. Variable: q.
  parallelise persistent int spaceTimeVolumeFluxesDof // The indices of the space-time volume fluxes DoF belonging to this cell. Variable: F. 
  // ! end of space-time data

  // ! volume data, size: #var*(N+1)^d
  parallelise persistent int dof;               // The indices of the DoF belonging to this cell. Resembles also the state of the previous time step during update calculations. Variable: u.
  parallelise persistent int updateDof;         // The indices of the update DoF belonging to this cell. All volume updates and face fluctuations contribute to this variable. Variable: du.
  parallelise persistent int predictorDof;      // The indices of the predictor DoF belonging to this cell, i.e., the time integrated space-time DoF. Variable: qA.  
  parallelise persistent int volumeFluxesDof;   // The indices of the volume fluxes DoF belonging to this cell, i.e., the time integrated space-time DoF. Variable: FA. 
  // ! end of volume data

  // ! face data, size: #var*2*d*(N+1)^(d-1)
  parallelise persistent int extrapolatedPredictorDof; // The indices of the predictor DoF extrapolated to the bounding faces of the cell. Variables: uN,uS,uW,uE,..
  parallelise persistent int normalFluxesDof;          // The indices of the normal fluxes computed at the bounding faces of the cell. Variables: FN,FS,FW,FE,.. 
  parallelise persistent int fluctuationsDof;          // The indices of the fluctuations DoF computed at the bounding faces of the cell. Variables: DLN,DLS,DLW,DLE,.. 
  // ! end of face data
  
  // ! grid information
  parallelise persistent int    level;              
  parallelise persistent double offset[DIMENSIONS]; 
  parallelise persistent double size[DIMENSIONS];    
  // ! end of grid information
};
